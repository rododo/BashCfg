alias htext='hadoop fs -text'
alias hmkdir='hadoop fs -mkdir'
alias hkill='hadoop job -kill'
alias hmk='hdfs dfs -mkdir -p'
alias hput='hdfs dfs -put'
alias hget='hdfs dfs -get'
